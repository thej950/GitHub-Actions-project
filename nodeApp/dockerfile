# ---------- Stage 1: Build Dependencies ----------
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY nodeApp/package*.json ./

# Install dependencies
RUN npm init -y && npm install express mysql2 ejs dotenv

# Copy entire project
COPY nodeApp/ .

# ---------- Stage 2: Final Image ----------
FROM node:18-alpine

WORKDIR /app

# Copy node_modules from builder
COPY --from=builder /app/node_modules ./node_modules

# Copy application source
COPY . .

# Expose app port
EXPOSE 3000

# Start node app
CMD ["node", "server.js"]
